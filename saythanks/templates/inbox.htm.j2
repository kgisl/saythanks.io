{% extends "base.htm.j2" %}

{% block title %}Say Thank You{% endblock %}

{% block extra_head %}

    <style>
        pre {
            max-width: 600px!important;
        }
    </style>
{% endblock %}

{% block content %}

<input type="hidden" id="username" value={{user['nickname']}}>

